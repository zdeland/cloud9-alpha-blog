<h2 align="center">Create New Category</h2>


<%= render 'shared/errors',obj: @category  %>

<%= form_for @category do |f| %>
  <div class="form-group row">
    <label for="name" class="col-sm-2 col-form-label"><%= f.label :name  %></label>
    <div class="col-sm-5">
      <%= f.text_field :name, class:"form-control", Placeholder: "Enter category name", autofocus:true  %>
    </div>
  </div>
  
  <div class="form-group row">
    <div class="col-sm-2 offset-md-2">
      <%= f.submit class:"btn btn-primary btn-lg"  %>
    </div>
  </div>
  
<%end%>

<div class="col-xs-4 offset-md-4">
  <%= link_to "Cancel and Return", articles_path %>
</div>