<h1>Create an article</h1>

<% if @art.errors.any? %>
  <!--<h2>Unable to save article due to the following errors:</h2>-->
  <ul>
  <% @art.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
<% end %>


<%= form_for @art do |f| %>
<p>
    <%= f.label :title  %>
    <br />
    <%= f.text_field :title  %>
</p>
<p>
    <%= f.label :description  %>
    <br />
    <%= f.text_area :description  %>
</p>
<p>
    <%= f.submit %>
</p>
<%end%>
    