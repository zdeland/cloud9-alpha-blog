
<%= render 'shared/errors',obj: @user  %>

<div class="row">
  <div class="col-md-12 offset-md-2">
    <%= form_for @user do |f| %>
      <div class="form-group row">
        <label for="usenrame" class="col-sm-2 col-form-label"><%= f.label :username  %></label>
        <div class="col-sm-5">
          <%= f.text_field :username, class:"form-control", Placeholder: "Enter username", autofocus:true  %>
        </div>
      </div>
      <div class="form-group row">
        <label for="email" class="col-sm-2 col-form-label"><%= f.label :email  %></label>
        <div class="col-sm-5">
          <%= f.email_field :email, class:"form-control", Placeholder: "Enter email"  %>
        </div>
      </div>
      <div class="form-group row">
        <label for="password" class="col-sm-2 col-form-label"><%= f.label :password  %></label>
        <div class="col-sm-5">
          <%= f.password_field :password, class:"form-control", Placeholder: "Enter password"  %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-2 offset-md-2">
          <%= f.submit(@user.new_record? ? "Sign Up" : "Update Account", class:"btn btn-primary btn-lg")  %>
        </div>
      </div>
      
    <%end%>
    
    <div class="col-xs-4 offset-md-4">
      <%= link_to "Cancel and Return", articles_path %>
    </div>
  </div>
</div>